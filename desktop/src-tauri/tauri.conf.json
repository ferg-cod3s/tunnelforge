{
  "$schema": "../gen/schemas/desktop-schema.json",
  "build": {
    "beforeDevCommand": "cd ../web && bun run start:bun",
    "beforeBuildCommand": "cd ../web && bun run build:bun",
    "devUrl": "http://localhost:3001",
    "frontendDist": "../web/public"
  },
  "productName": "TunnelForge",
  "version": "1.0.0",
  "identifier": "dev.tunnelforge.desktop",
  "plugins": {
    "fs": {
      "scope": ["$HOME/**", "$APPDATA/**", "$APPCONFIG/**", "$APPLOCALDATA/**", "$APPLOG/**"]
    },
    "shell": {
      "open": true,
      "sidecar": true,
      "scope": [
        {
          "name": "tunnelforge",
          "cmd": "tunnelforge",
          "args": true
        }
      ]
    },
    "process": {
      "exit": true,
      "restart_api": true
    },
    "notification": {
      "default": [
        "core:default"
      ]
    }
  },
  "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.tunnelforge.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png", 
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [
        "tunnelforge-server"
      ],
      "copyright": "Copyright Â© 2024 TunnelForge Team",
      "category": "DeveloperTool",
      "shortDescription": "Terminal sharing made simple",
      "longDescription": "TunnelForge allows you to share terminal sessions through any web browser with a beautiful, fast desktop interface.",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "tsp": false,
        "wix": {
          "language": ["en-US"],
          "template": "main.wxs",
          "fragmentPaths": [],
          "componentGroupRefs": [],
          "componentRefs": [],
          "featureGroupRefs": [],
          "featureRefs": [],
          "mergeRefs": [],
          "skipWebviewInstall": false,
          "license": "LICENSE.rtf",
          "enableElevatedUpdateTask": true,
          "bannerPath": "banner.bmp",
          "dialogImagePath": "dialog.bmp"
        },
        "nsis": {
          "license": "LICENSE.txt", 
          "headerImage": "header.bmp",
          "sidebarImage": "sidebar.bmp",
          "installerIcon": "installer.ico",
          "installMode": "perMachine",
          "languages": ["English"],
          "displayLanguageSelector": false
        }
      },
      "linux": {
        "deb": {
          "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0", "libayatana-appindicator3-1"],
          "files": {}
        }
      }
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TunnelForge",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "TunnelForge - Terminal Sharing"
    }
  }
}