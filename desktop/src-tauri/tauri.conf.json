{
  "$schema": "../gen/schemas/desktop-schema.json",
  "build": {
    "beforeBuildCommand": "echo 'Building TunnelForge Native Desktop App'",
    "frontendDist": "../dist"
  },
  "productName": "TunnelForge",
  "version": "1.0.0",
  "identifier": "dev.tunnelforge.desktop",
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Copyright Â© 2024 TunnelForge Team",
    "category": "DeveloperTool",
    "shortDescription": "Terminal sharing made simple",
    "longDescription": "TunnelForge allows you to share terminal sessions through any web browser with a beautiful, fast native desktop interface."
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.tunnelforge.dev wss://*.tunnelforge.dev; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self'"
    },
    "windows": [],
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "TunnelForge - Terminal Sharing"
    }
  }
}
