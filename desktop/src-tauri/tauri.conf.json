{
  "$schema": "../gen/schemas/desktop-schema.json",
  "build": {
    "beforeDevCommand": "echo 'Go server should be running on port 4021'",
    "beforeBuildCommand": "cd ../web && bun build src/client/app-entry.ts --outfile=public/bundle/client-bundle.js --format=esm --minify && bunx postcss src/client/styles.css -o public/bundle/styles.css",
    "devUrl": "http://localhost:4021",
    "frontendDist": "../web/public"
  },
  "productName": "TunnelForge",
  "version": "1.0.0",
  "identifier": "dev.tunnelforge.desktop",
  "plugins": {
    "fs": {
      "scope": ["$HOME/**", "$APPDATA/**", "$APPCONFIG/**", "$APPLOCALDATA/**", "$APPLOG/**"]
    },
    "shell": {
      "open": true,
      "sidecar": true,
      "scope": [
        {
          "name": "tunnelforge",
          "cmd": "tunnelforge",
          "args": true
        }
      ]
    },
    "process": {
      "exit": true,
      "restart_api": true
    },
    "notification": {
      "default": [
        "core:default"
      ]
    }
  },
  "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png", 
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [
        "tunnelforge-server"
      ],
      "copyright": "Copyright Â© 2024 TunnelForge Team",
      "category": "DeveloperTool",
      "shortDescription": "Terminal sharing made simple",
      "longDescription": "TunnelForge allows you to share terminal sessions through any web browser with a beautiful, fast desktop interface."
    },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TunnelForge",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "TunnelForge - Terminal Sharing"
    }
  }
}