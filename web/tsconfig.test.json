{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2020",
    "lib": ["ES2020", "dom"],
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/test/**/*",
    "src/server/**/*",
    "src/client/**/*",
    "src/shared/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public"
  ]
}
