{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "types": ["node"],
    "composite": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*",
    "src/types/**/*",
    "src/cli.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "src/client/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}