# Test TunnelForge beta 15 npm package
FROM node:22-slim

# Install system dependencies including build tools
RUN apt-get update && apt-get install -y \
    curl \
    git \
    python3 \
    python3-pip \
    build-essential \
    libpam0g-dev \
    && rm -rf /var/lib/apt/lists/*

# Create test directory
WORKDIR /test

# Create a test package.json
RUN echo '{"name": "tunnelforge-test", "version": "1.0.0", "type": "module"}' > package.json

# Install TunnelForge beta 15 (skip postinstall due to bug)
RUN npm install tunnelforge@1.0.0-beta.15 --ignore-scripts

# Copy test script
COPY test-tunnelforge-beta15.js test-tunnelforge.js

CMD ["node", "test-tunnelforge.js"]