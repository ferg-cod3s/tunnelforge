<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .btn-primary {
    background-color: #f59e0b;
    color: white;
  }

  .btn-primary:hover {
    background-color: #d97706;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .features {
    padding: 4rem 0;
  }

  .features h2 {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2rem;
    color: #1f2937;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .search-section {
    background-color: #f9fafb;
    padding: 4rem 0;
    text-align: center;
  }

  .search-section h2 {
    margin-bottom: 2rem;
    color: #1f2937;
  }

  .cta {
    background-color: #1f2937;
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .cta h2 {
    margin-bottom: 1rem;
  }

  .cta p {
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .feature-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
